import pandas as pd
from sklearn.linear_model import LogisticRegression
import joblib

# Create sample data
data = {
    'attendance': [90, 60, 80, 70, 95, 50],
    'avg_score': [85, 55, 70, 65, 90, 40],
    'income_score': [4, 2, 3, 2, 5, 1],
    'dropout_risk': [0, 1, 0, 1, 0, 1]
}
df = pd.DataFrame(data)

X = df[['attendance', 'avg_score', 'income_score']]
y = df['dropout_risk']

model = LogisticRegression()
model.fit(X, y)

joblib.dump(model, 'model.pkl')
